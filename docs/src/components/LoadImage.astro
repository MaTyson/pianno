---
import { ImageIcon } from 'lucide-react';
import LoadImageDialog from './react/load-image-dialog';
import { Button } from './ui/button';
---

<div class="border rounded-sm flex flex-col items-center justify-center h-40">
  <div
    class="flex p-1 gap-1 flex-row h-fit opacity-90 items-center border shadow-lg rounded-md"
  >
    {
      Array.from({ length: 2 }).map((_, i) => (
        <Button
          client:load
          className="animate-pulse bg-muted"
          key={i}
          variant="outline"
          size="icon"
        />
      ))
    }
    <span class="text-input">|</span>
    <LoadImageDialog client:load />
    {
      Array.from({ length: 3 }).map((_, i) => (
        <Button
          className="animate-pulse bg-muted"
          client:load
          key={i}
          variant="outline"
          size="icon"
        />
      ))
    }
  </div>
  <p class="font-mono flex flex-row font-semibold text-input text-xs gap-1">
    <span>Please load an image to start</span>
    <ImageIcon className="inline h-4 w-4 stroke-purple-800" />
  </p>
</div>
